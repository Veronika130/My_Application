<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/prefs_cat_recording">

        <EditTextPreference
            app:key="pref_max_minutes"
            app:title="@string/prefs_max_minutes"
            android:inputType="number"
            android:defaultValue="10"
            app:useSimpleSummaryProvider="true"/>

        <Preference
            app:key="pref_pick_dir"
            app:title="@string/prefs_pick_dir"
            app:summary="@string/prefs_pick_dir_summary"/>
    </PreferenceCategory>

</PreferenceScreen>
